@model PostCore.MainApp.ViewModels.Operator.CreatePostViewModel
@{
    ViewData["Title"] = "Operator - Create post";
    Layout = "_MainLayout";
}
<div asp-validation-summary="All" class="text-danger"></div>
<div class="card m-2">
    <h5 class="card-header">Post info:</h5>
    <div class="card-body">
        <form asp-action="CreatePost" method="post">
            <div class="form-group">
                <label asp-for="PersonFrom"></label>
                <div><span asp-validation-for="PersonFrom" class="text-danger"></span></div>
                <input asp-for="PersonFrom" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PersonTo"></label>
                <div><span asp-validation-for="PersonTo" class="text-danger"></span></div>
                <input asp-for="PersonTo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DestinationBranchId"></label>
                <select name="DestinationBranchId" class="form-control">
                    <option selected disabled>- No branch -</option>
                    @foreach (var b in Model.AllBranches)
                    {
                        <option value="@b.Id">@b.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="AddressTo"></label>
                <div><span asp-validation-for="AddressTo" class="text-danger"></span></div>
                <input asp-for="AddressTo" class="form-control" />
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Create post</button>
            </div>
        </form>
    </div>
</div>