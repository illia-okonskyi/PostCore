@model PostCore.MainApp.ViewModels.Cars.EditViewModel
@{
    ViewData["Title"] =
        Model.EditorMode == PostCore.ViewUtils.EditorMode.Create
            ? "Create car"
            : "Edit car";
    Layout = "_MainLayout";
}
@{
    var saveButtonText = Model.EditorMode == PostCore.ViewUtils.EditorMode.Create
            ? "Create"
            : "Save";
}
<div asp-validation-summary="All" class="text-danger"></div>
<div class="card m-2">
    <h5 class="card-header">Car info:</h5>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input asp-for="Id" />
            <input asp-for="EditorMode" />
            <input asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="Model"></label>
                <div><span asp-validation-for="Model" class="text-danger"></span></div>
                <input asp-for="Model" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Number"></label>
                <div><span asp-validation-for="Number" class="text-danger"></span></div>
                <input asp-for="Number" class="form-control" />
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">@saveButtonText</button>
                <a href="@Model.ReturnUrl" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>