<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PostCore - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/postcorejs/PostCoreJs.js"></script>
</head>
<body>
    <div class="p-2">
        <div class="navbar navbar-dark bg-dark" role="navigation">
            <div class="row justify-content-between align-items-center" style="flex-grow: 1">
                <div class="col">
                    <a class="navbar-brand" href="/">
                        <h1>PostCore post automation</h1>
                    </a>
                </div>
                <div class="col text-right">
                    @await Component.InvokeAsync(nameof(Account))
                </div>
            </div>
        </div>
    </div>
    <div class="p-2">
        @RenderBody()
    </div>
</body>
</html>